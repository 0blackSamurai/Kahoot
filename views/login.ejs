<%- include('./partials/header') %>
<link rel="stylesheet" href="/css/kahoot-dark.css">

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1><i class="fas fa-sign-in-alt"></i> Login to Quizzify</h1>
        </div>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="auth-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>
        
        <form action="/login" method="POST" class="auth-form">
            <div class="form-group">
                <label for="epost"><i class="fas fa-envelope"></i> Email</label>
                <input type="email" id="epost" name="epost" class="form-control" required autocomplete="email">
            </div>
            
            <div class="form-group">
                <label for="passord"><i class="fas fa-lock"></i> Password</label>
                <div class="password-input-container">
                    <input type="password" id="passord" name="passord" class="form-control" required autocomplete="current-password">
                    <button type="button" class="show-password-btn" aria-label="Show password">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>
            
            <div class="form-options">
                <div class="remember-me">
                    <label>
                        <input type="checkbox" name="remember" id="remember">
                        Remember me
                    </label>
                </div>
                <a href="/forgot-password" class="forgot-link">Forgot password?</a>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
            </div>
        </form>
        
        <div class="auth-divider">
            <span>or</span>
        </div>
        
        <div class="auth-alt-options">
            <a href="/register" class="btn-register">
                <i class="fas fa-user-plus"></i> Create New Account
            </a>
            
            <a href="/quiz/join" class="btn-guest">
                <i class="fas fa-gamepad"></i> Join as Guest
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: var(--kahoot-bg-purple);
        background-image: url('/images/kahoot-classroom-bg.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        display: block;
    }
    
    .auth-container {
        width: 100%;
        max-width: 450px;
        padding: 20px;
        margin: 40px auto 80px;
    }
    
    .auth-card {
        background-color: rgba(30, 30, 30, 0.9);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(10px);
    }
    
    .auth-header {
        background-color: var(--kahoot-purple);
        padding: 25px 20px;
        text-align: center;
    }
    
    .auth-header h1 {
        color: white;
        margin: 0;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .auth-error {
        background-color: rgba(226, 27, 60, 0.2);
        color: #ff6b6b;
        padding: 12px;
        margin: 20px 20px 0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .auth-form {
        padding: 25px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        color: var(--dark-text);
        margin-bottom: 8px;
        font-weight: 500;
    }
    
    .form-group label i {
        margin-right: 6px;
        color: var(--kahoot-light-purple);
    }
    
    .form-control {
        width: 100%;
        padding: 12px 15px;
        background-color: var(--dark-input-bg);
        border: 1px solid var(--dark-border);
        border-radius: 8px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s;
        box-sizing: border-box;
    }
    
    .form-control:focus {
        border-color: var(--kahoot-light-purple);
        outline: none;
        box-shadow: 0 0 0 2px rgba(142, 82, 245, 0.2);
    }
    
    .password-input-container {
        position: relative;
    }
    
    .show-password-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--dark-text-secondary);
        cursor: pointer;
        font-size: 1rem;
        padding: 5px;
    }
    
    .show-password-btn:hover {
        color: var(--kahoot-light-purple);
    }
    
    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        color: var(--dark-text-secondary);
        font-size: 0.9rem;
    }
    
    .remember-me label {
        cursor: pointer;
        display: flex;
        align-items: center;
    }
    
    .remember-me input {
        margin-right: 6px;
        accent-color: var(--kahoot-light-purple);
    }
    
    .forgot-link {
        color: var(--kahoot-light-purple);
        text-decoration: none;
        transition: color 0.2s;
    }
    
    .forgot-link:hover {
        color: var(--kahoot-purple);
        text-decoration: underline;
    }
    
    .form-actions {
        margin-top: 30px;
    }
    
    .btn-login {
        width: 100%;
        padding: 14px;
        background: linear-gradient(to right, var(--kahoot-purple), var(--kahoot-light-purple));
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(142, 82, 245, 0.4);
    }
    
    .auth-divider {
        display: flex;
        align-items: center;
        text-align: center;
        color: var(--dark-text-secondary);
        padding: 0 25px;
        margin-bottom: 20px;
    }

    .auth-divider::before,
    .auth-divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid var(--dark-border);
    }

    .auth-divider span {
        padding: 0 15px;
    }
    
    .auth-alt-options {
        padding: 0 25px 25px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    
    .btn-register, .btn-guest {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 12px;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .btn-register {
        background-color: var(--dark-input-bg);
        color: white;
        border: 1px solid var(--dark-border);
    }
    
    .btn-guest {
        background-color: var(--kahoot-green);
        color: white;
    }
    
    .btn-register:hover, .btn-guest:hover {
        transform: translateY(-2px);
        filter: brightness(1.1);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 500px) {
        .auth-container {
            padding: 10px;
        }
        
        .auth-header {
            padding: 15px;
        }
        
        .auth-form {
            padding: 15px;
        }
        
        .form-options {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Show/hide password functionality
        const passwordField = document.getElementById('passord');
        const showPasswordBtn = document.querySelector('.show-password-btn');
        
        if (showPasswordBtn) {
            showPasswordBtn.addEventListener('click', function() {
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
                
                const icon = this.querySelector('i');
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
            });
        }
    });
</script>

<%- include('./partials/footer') %>